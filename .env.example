# Provee Web Application Environment Variables
# 이 파일을 .env.local로 복사하여 실제 값들로 수정하세요

# 애플리케이션 기본 설정
NEXT_PUBLIC_APP_NAME="Provee"
NEXT_PUBLIC_APP_VERSION="0.1.0"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API 엔드포인트 설정
NEXT_PUBLIC_API_URL="http://localhost:8000/api"
NEXT_PUBLIC_API_VERSION="v1"

# 데이터베이스 설정
DATABASE_URL="postgresql://username:password@localhost:5432/provee_db"

# 구글 서비스
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# 네이버/카카오 로그인
NAVER_CLIENT_ID="your-naver-client-id"
NAVER_CLIENT_SECRET="your-naver-client-secret"
KAKAO_CLIENT_ID="your-kakao-client-id"
KAKAO_CLIENT_SECRET="your-kakao-client-secret"

# 결제 서비스
TOSS_CLIENT_KEY="your-toss-client-key"
TOSS_SECRET_KEY="your-toss-secret-key"

# AWS 설정
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-northeast-2"
AWS_S3_BUCKET="provee-uploads"

# 이메일 서비스
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@provee.co.kr"

# SMS 서비스
SMS_API_KEY="your-sms-api-key"
SMS_API_SECRET="your-sms-api-secret"

# JWT 설정
JWT_SECRET="your-very-secure-jwt-secret-key"
JWT_REFRESH_SECRET="your-refresh-token-secret"

# 세션 설정
SESSION_SECRET="your-session-secret-key"

# Redis 설정
REDIS_URL="redis://localhost:6379"

# 기타 설정
LOG_LEVEL="development"
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_DEV_MODE=true